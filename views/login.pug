html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="styles.css")
        title SIGN IN
    body 
        main
            a(
                href='/register' 
                )
                button.singIn-btn Resgistro
            br
            br
            h1.title IMDV movies
            h4 Login:
            p #{msj}
